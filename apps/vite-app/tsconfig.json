{
  "compileOnSave": false,
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "isolatedModules": true,
    "lib": [
      "es2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "useDefineForClassFields": true
  },
  "include": [
    "**/*.ts",
    "src"
  ]
}